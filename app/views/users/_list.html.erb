<% if users.any? %>
  <ul class="user_list">
  <% users.each do |user| %>
    <li>
      <%= image_tag user_image(user, 50), class: 'user_image' %>
      <%= link_to content_tag('span', user.name), user_path(user) %>
      <%= render partial: 'follow_icon', locals: {user: user} %>
    </li>
  <% end %>
  </ul>
<% end %>
